{
  "private": true,
  "scripts": {
    "build": "yarn build-pdf && yarn build-html",
    "build-pdf": "pandoc -d config/pdf.yaml -V ispdf -V date=\"$(date -u +\"%Y-%m-%dT%H:%M:%SZ\")\" --verbose",
    "build-html": "pandoc -d config/html.yaml -V date=\"$(date -u +\"%Y-%m-%dT%H:%M:%SZ\")\"",
    "format": "prettier --write *.md **/*.md",
    "lint": "prettylint *.md **/*.md",
    "preview": "pen"
  },
  "devDependencies": {
    "pen": "^2.2.0",
    "prettier": "^2.2.1",
    "prettylint": "^1.0.0"
  }
}
